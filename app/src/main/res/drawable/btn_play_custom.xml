<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el botón está presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF9800" /> <!-- Color de fondo naranja cuando se presiona -->
            <corners android:radius="8dp" /> <!-- Esquinas redondeadas -->
        </shape>
    </item>
    <!-- Estado predeterminado del botón -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFC107" /> <!-- Color de fondo amarillo -->
            <corners android:radius="8dp" /> <!-- Esquinas redondeadas -->
        </shape>
    </item>
</selector>